{"ast":null,"code":"import axios from 'axios';\nimport mitt from 'mitt';\nexport default {\n  data() {\n    return {\n      product: {\n        name: '',\n        description: '',\n        price: null,\n        image: '',\n        category_id: null // Ne devrait pas être un tableau\n      },\n      categories: []\n    };\n  },\n  methods: {\n    submitForm() {\n      let formData = new FormData();\n      formData.append('name', this.product.name);\n      formData.append('description', this.product.description);\n      formData.append('price', this.product.price);\n      formData.append('image', this.product.image);\n      formData.append('category_id', this.product.category_id);\n      axios.post(\"http://127.0.0.1:8000/api/products\", formData) // Assurez-vous de remplacer \"URL_DE_VOTRE_API\" par l'URL correcte\n      .then(response => {\n        console.log(response.data);\n        alert(\"Produit ajouté avec succès\");\n      }).catch(error => {\n        console.error(\"Erreur lors de l'ajout du produit :\", error);\n        alert(\"Échec de l'ajout du produit\");\n      });\n    },\n    handleFileUpload(e) {\n      this.product.image = e.target.files[0];\n    },\n    updateCategories() {\n      axios.get(\"http://127.0.0.1:8000/api/categories\") // Assurez-vous de remplacer \"URL_DE_VOTRE_API\" par l'URL correcte\n      .then(({\n        data\n      }) => {\n        this.categories = data;\n      }).catch(error => {\n        console.error(\"Erreur lors de la récupération des catégories :\", error);\n      });\n    }\n  },\n  mounted() {\n    this.updateCategories();\n    this.$emitter = mitt();\n    this.$emitter.on('category-added', this.updateCategories);\n  },\n  beforeUnmount() {\n    this.$emitter.off('category-added', this.updateCategories); // Supprimer l'écouteur d'événement avant la destruction du composant\n  }\n};","map":{"version":3,"names":["axios","mitt","data","product","name","description","price","image","category_id","categories","methods","submitForm","formData","FormData","append","post","then","response","console","log","alert","catch","error","handleFileUpload","e","target","files","updateCategories","get","mounted","$emitter","on","beforeUnmount","off"],"sources":["C:\\Users\\IKRAM\\Coding_Cha\\app_codingchan\\src\\components\\ProductForm.vue"],"sourcesContent":["<template>\n  <form @submit.prevent=\"submitForm\">\n    <div class=\"form-group\">\n      <label for=\"name\">Product Name:</label>\n      <input id=\"name\" type=\"text\" class=\"form-control\" v-model=\"product.name\" required>\n    </div>\n    <div class=\"form-group\">\n      <label for=\"description\">Description:</label>\n      <textarea id=\"description\" class=\"form-control\" v-model=\"product.description\"></textarea>\n    </div>\n    <div class=\"form-group\">\n      <label for=\"price\">Price:</label>\n      <input id=\"price\" type=\"number\" class=\"form-control\" v-model.number=\"product.price\" required>\n    </div>\n    <div class=\"form-group\">\n      <label for=\"image\">Image:</label>\n      <input id=\"image\" type=\"file\" class=\"form-control-file\" accept=\"image/*\" @change=\"handleFileUpload\">\n    </div>\n    <div class=\"form-group\">\n      <label for=\"categories\">Category:</label>\n      <select id=\"categories\" class=\"form-control\" v-model=\"product.category_id\" required>\n        <option v-for=\"category in categories\" :key=\"category.id\" :value=\"category.id\">{{ category.name }}</option>\n      </select>\n    </div>\n    <button type=\"submit\" class=\"btn btn-primary\">Add</button>\n  </form>\n</template>\n\n\n<script>\nimport axios from 'axios';\nimport mitt from 'mitt';\n\nexport default {\n  data() {\n    return {\n      product: {\n        name: '',\n        description: '',\n        price: null,\n        image: '',\n        category_id: null // Ne devrait pas être un tableau\n      },\n      categories: []\n    };\n  },\n  methods: {\n    submitForm() {\n      let formData = new FormData();\n      formData.append('name', this.product.name);\n      formData.append('description', this.product.description);\n      formData.append('price', this.product.price);\n      formData.append('image', this.product.image);\n      formData.append('category_id', this.product.category_id);\n\n      axios.post(\"http://127.0.0.1:8000/api/products\", formData) // Assurez-vous de remplacer \"URL_DE_VOTRE_API\" par l'URL correcte\n        .then(response => {\n          console.log(response.data);\n          alert(\"Produit ajouté avec succès\");\n        })\n        .catch(error => {\n          console.error(\"Erreur lors de l'ajout du produit :\", error);\n          alert(\"Échec de l'ajout du produit\");\n        });\n    },\n    handleFileUpload(e) {\n      this.product.image = e.target.files[0];\n    },\n    updateCategories() {\n      axios.get(\"http://127.0.0.1:8000/api/categories\") // Assurez-vous de remplacer \"URL_DE_VOTRE_API\" par l'URL correcte\n        .then(({ data }) => {\n          this.categories = data;\n        })\n        .catch(error => {\n          console.error(\"Erreur lors de la récupération des catégories :\", error);\n        });\n    }\n  },\n  mounted() {\n    this.updateCategories(); \n    this.$emitter = mitt(); \n    this.$emitter.on('category-added', this.updateCategories);\n  },\n  beforeUnmount() {\n    this.$emitter.off('category-added', this.updateCategories); // Supprimer l'écouteur d'événement avant la destruction du composant\n  }\n}\n</script>\n\n<style>\nform {\n  max-width: 450px;\n  margin: 30px auto;\n  background: rgb(223, 236, 236);\n  text-align: left;\n  padding: 70px;\n  border-radius: 14px;\n}\nlabel {\n  color: rgb(11, 12, 12);\n  display: block;\n  margin: 25px 0 15px;\n  font-size: 1em;\n  text-transform: uppercase;\n  letter-spacing: 1px;\n  font-weight: bold;\n}\ninput, textarea, select {\n  display: block;\n  padding: 10px 6px;\n  width: 100%;\n  border: none;\n  border-bottom: 2px solid gainsboro;\n  color: #555;\n}\nbutton[type=\"submit\"] {\n  margin-top: 30px;\n  padding: 10px 20px;\n  background-color: #333;\n  color: #fff;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n}\n</style>\n"],"mappings":"AA8BA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,IAAG,MAAO,MAAM;AAEvB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE;QACPC,IAAI,EAAE,EAAE;QACRC,WAAW,EAAE,EAAE;QACfC,KAAK,EAAE,IAAI;QACXC,KAAK,EAAE,EAAE;QACTC,WAAW,EAAE,IAAG,CAAE;MACpB,CAAC;MACDC,UAAU,EAAE;IACd,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAIC,QAAO,GAAI,IAAIC,QAAQ,CAAC,CAAC;MAC7BD,QAAQ,CAACE,MAAM,CAAC,MAAM,EAAE,IAAI,CAACX,OAAO,CAACC,IAAI,CAAC;MAC1CQ,QAAQ,CAACE,MAAM,CAAC,aAAa,EAAE,IAAI,CAACX,OAAO,CAACE,WAAW,CAAC;MACxDO,QAAQ,CAACE,MAAM,CAAC,OAAO,EAAE,IAAI,CAACX,OAAO,CAACG,KAAK,CAAC;MAC5CM,QAAQ,CAACE,MAAM,CAAC,OAAO,EAAE,IAAI,CAACX,OAAO,CAACI,KAAK,CAAC;MAC5CK,QAAQ,CAACE,MAAM,CAAC,aAAa,EAAE,IAAI,CAACX,OAAO,CAACK,WAAW,CAAC;MAExDR,KAAK,CAACe,IAAI,CAAC,oCAAoC,EAAEH,QAAQ,EAAE;MAAA,CACxDI,IAAI,CAACC,QAAO,IAAK;QAChBC,OAAO,CAACC,GAAG,CAACF,QAAQ,CAACf,IAAI,CAAC;QAC1BkB,KAAK,CAAC,4BAA4B,CAAC;MACrC,CAAC,EACAC,KAAK,CAACC,KAAI,IAAK;QACdJ,OAAO,CAACI,KAAK,CAAC,qCAAqC,EAAEA,KAAK,CAAC;QAC3DF,KAAK,CAAC,6BAA6B,CAAC;MACtC,CAAC,CAAC;IACN,CAAC;IACDG,gBAAgBA,CAACC,CAAC,EAAE;MAClB,IAAI,CAACrB,OAAO,CAACI,KAAI,GAAIiB,CAAC,CAACC,MAAM,CAACC,KAAK,CAAC,CAAC,CAAC;IACxC,CAAC;IACDC,gBAAgBA,CAAA,EAAG;MACjB3B,KAAK,CAAC4B,GAAG,CAAC,sCAAsC,EAAE;MAAA,CAC/CZ,IAAI,CAAC,CAAC;QAAEd;MAAK,CAAC,KAAK;QAClB,IAAI,CAACO,UAAS,GAAIP,IAAI;MACxB,CAAC,EACAmB,KAAK,CAACC,KAAI,IAAK;QACdJ,OAAO,CAACI,KAAK,CAAC,iDAAiD,EAAEA,KAAK,CAAC;MACzE,CAAC,CAAC;IACN;EACF,CAAC;EACDO,OAAOA,CAAA,EAAG;IACR,IAAI,CAACF,gBAAgB,CAAC,CAAC;IACvB,IAAI,CAACG,QAAO,GAAI7B,IAAI,CAAC,CAAC;IACtB,IAAI,CAAC6B,QAAQ,CAACC,EAAE,CAAC,gBAAgB,EAAE,IAAI,CAACJ,gBAAgB,CAAC;EAC3D,CAAC;EACDK,aAAaA,CAAA,EAAG;IACd,IAAI,CAACF,QAAQ,CAACG,GAAG,CAAC,gBAAgB,EAAE,IAAI,CAACN,gBAAgB,CAAC,EAAE;EAC9D;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}