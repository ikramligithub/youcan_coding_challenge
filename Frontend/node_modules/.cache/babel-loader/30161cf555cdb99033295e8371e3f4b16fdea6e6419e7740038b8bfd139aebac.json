{"ast":null,"code":"import axios from 'axios';\nexport default {\n  data() {\n    return {\n      products: [],\n      categories: [],\n      selectedCategory: ''\n    };\n  },\n  async created() {\n    await this.fetchProducts();\n    await this.fetchCategories();\n  },\n  methods: {\n    async fetchProducts() {\n      try {\n        const response = await axios.get('http://127.0.0.1:8000/api/products');\n        this.products = response.data;\n      } catch (error) {\n        console.error('Erreur lors de la récupération des produits :', error);\n      }\n    },\n    async fetchCategories() {\n      try {\n        const response = await axios.get('http://127.0.0.1:8000/categories');\n        this.categories = response.data;\n      } catch (error) {\n        console.error('Erreur lors de la récupération des catégories :', error);\n      }\n    },\n    sortByPrice(order) {\n      if (order === 'asc') {\n        this.products.sort((a, b) => a.price - b.price);\n      } else if (order === 'desc') {\n        this.products.sort((a, b) => b.price - a.price);\n      }\n    }\n  },\n  computed: {\n    filteredProducts() {\n      if (this.selectedCategory) {\n        return this.products.filter(product => product.categoryId === this.selectedCategory);\n      } else {\n        return this.products;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","data","products","categories","selectedCategory","created","fetchProducts","fetchCategories","methods","response","get","error","console","sortByPrice","order","sort","a","b","price","computed","filteredProducts","filter","product","categoryId"],"sources":["C:\\Users\\IKRAM\\Coding_Cha\\app_codingchan\\src\\components\\ProductList.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <div class=\"row\">\n      <div class=\"col-md-3\">\n        <h3>Filtrer par Catégorie</h3>\n        <select v-model=\"selectedCategory\" class=\"form-control\">\n          <option value=\"\">Toutes les catégories</option>\n          <option v-for=\"category in categories\" :key=\"category.id\" :value=\"category.id\">{{ category.name }}</option>\n        </select>\n      </div>\n      <div class=\"col-md-9\">\n        <h3>Trier par Prix</h3>\n        <button @click=\"sortByPrice('asc')\" class=\"btn btn-primary\">Prix croissant</button>\n        <button @click=\"sortByPrice('desc')\" class=\"btn btn-primary\">Prix décroissant</button>\n        <div class=\"table-responsive mt-4\">\n          <table class=\"table table-striped\">\n            <thead>\n              <tr>\n                <th>Image</th>\n                <th>Nom</th>\n                <th>Description</th>\n                <th>Prix</th>\n              </tr>\n            </thead>\n            <tbody>\n              <tr v-for=\"product in filteredProducts\" :key=\"product.id\">\n                <td><img :src=\"product.image\" alt=\"Product Image\" style=\"max-width: 100px;\"></td>\n                <td>{{ product.name }}</td>\n                <td>{{ product.description }}</td>\n                <td>{{ product.price }} €</td>\n              </tr>\n            </tbody>\n          </table>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from 'axios';\n\nexport default {\n  data() {\n    return {\n      products: [],\n      categories: [],\n      selectedCategory: '',\n    };\n  },\n  async created() {\n    await this.fetchProducts();\n    await this.fetchCategories();\n  },\n  methods: {\n    async fetchProducts() {\n      try {\n        const response = await axios.get('http://127.0.0.1:8000/api/products');\n        this.products = response.data;\n      } catch (error) {\n        console.error('Erreur lors de la récupération des produits :', error);\n      }\n    },\n    async fetchCategories() {\n      try {\n        const response = await axios.get('http://127.0.0.1:8000/categories');\n        this.categories = response.data;\n      } catch (error) {\n        console.error('Erreur lors de la récupération des catégories :', error);\n      }\n    },\n    sortByPrice(order) {\n      if (order === 'asc') {\n        this.products.sort((a, b) => a.price - b.price);\n      } else if (order === 'desc') {\n        this.products.sort((a, b) => b.price - a.price);\n      }\n    }\n  },\n  computed: {\n    filteredProducts() {\n      if (this.selectedCategory) {\n        return this.products.filter(product => product.categoryId === this.selectedCategory);\n      } else {\n        return this.products;\n      }\n    }\n  }\n};\n</script>\n\n<style>\n/* Ajoutez vos styles CSS personnalisés ici */\n</style>\n"],"mappings":"AAwCA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,UAAU,EAAE,EAAE;MACdC,gBAAgB,EAAE;IACpB,CAAC;EACH,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAM,IAAI,CAACC,aAAa,CAAC,CAAC;IAC1B,MAAM,IAAI,CAACC,eAAe,CAAC,CAAC;EAC9B,CAAC;EACDC,OAAO,EAAE;IACP,MAAMF,aAAaA,CAAA,EAAG;MACpB,IAAI;QACF,MAAMG,QAAO,GAAI,MAAMT,KAAK,CAACU,GAAG,CAAC,oCAAoC,CAAC;QACtE,IAAI,CAACR,QAAO,GAAIO,QAAQ,CAACR,IAAI;MAC/B,EAAE,OAAOU,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,+CAA+C,EAAEA,KAAK,CAAC;MACvE;IACF,CAAC;IACD,MAAMJ,eAAeA,CAAA,EAAG;MACtB,IAAI;QACF,MAAME,QAAO,GAAI,MAAMT,KAAK,CAACU,GAAG,CAAC,kCAAkC,CAAC;QACpE,IAAI,CAACP,UAAS,GAAIM,QAAQ,CAACR,IAAI;MACjC,EAAE,OAAOU,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iDAAiD,EAAEA,KAAK,CAAC;MACzE;IACF,CAAC;IACDE,WAAWA,CAACC,KAAK,EAAE;MACjB,IAAIA,KAAI,KAAM,KAAK,EAAE;QACnB,IAAI,CAACZ,QAAQ,CAACa,IAAI,CAAC,CAACC,CAAC,EAAEC,CAAC,KAAKD,CAAC,CAACE,KAAI,GAAID,CAAC,CAACC,KAAK,CAAC;MACjD,OAAO,IAAIJ,KAAI,KAAM,MAAM,EAAE;QAC3B,IAAI,CAACZ,QAAQ,CAACa,IAAI,CAAC,CAACC,CAAC,EAAEC,CAAC,KAAKA,CAAC,CAACC,KAAI,GAAIF,CAAC,CAACE,KAAK,CAAC;MACjD;IACF;EACF,CAAC;EACDC,QAAQ,EAAE;IACRC,gBAAgBA,CAAA,EAAG;MACjB,IAAI,IAAI,CAAChB,gBAAgB,EAAE;QACzB,OAAO,IAAI,CAACF,QAAQ,CAACmB,MAAM,CAACC,OAAM,IAAKA,OAAO,CAACC,UAAS,KAAM,IAAI,CAACnB,gBAAgB,CAAC;MACtF,OAAO;QACL,OAAO,IAAI,CAACF,QAAQ;MACtB;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceTy